// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model users {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  validated Boolean
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  todo      todo?
}

model todo {
  id        Int     @id @default(autoincrement())
  todoText  String
  completed Boolean
  userIp    Int     @unique
  user      users   @relation(fields: [userIp], references: [id])
}
